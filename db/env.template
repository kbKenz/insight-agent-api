# PostgreSQL Database Configuration
# Copy this file to .env and update the values for your environment

# PostgreSQL Database Settings
POSTGRES_DB=insight_agent
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here
POSTGRES_PORT=5432

# Application Database User (created during initialization)
APP_DB_USER=insight_agent_user
APP_DB_PASSWORD=your_secure_app_password_here

# PgAdmin Configuration
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=your_secure_pgadmin_password_here
PGADMIN_PORT=5050

# Network Configuration
POSTGRES_NETWORK=postgres_network

# Performance Tuning (Optional - defaults are set in postgresql.conf)
# Uncomment and adjust these values based on your system resources
# POSTGRES_SHARED_BUFFERS=256MB
# POSTGRES_MAX_CONNECTIONS=200
# POSTGRES_WORK_MEM=4MB
# POSTGRES_MAINTENANCE_WORK_MEM=64MB

# Security Settings
# Set to 'true' for production environments
# POSTGRES_SSL_MODE=disable
# POSTGRES_SSL_CERT_FILE=
# POSTGRES_SSL_KEY_FILE=
# POSTGRES_SSL_CA_FILE=

# Backup Settings
# POSTGRES_BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
# POSTGRES_BACKUP_RETENTION_DAYS=7

# Logging Configuration
# POSTGRES_LOG_LEVEL=warning
# POSTGRES_LOG_STATEMENT=none
# POSTGRES_LOG_MIN_DURATION_STATEMENT=1000

# Monitoring
# POSTGRES_TRACK_IO_TIMING=on
# POSTGRES_TRACK_FUNCTIONS=none 